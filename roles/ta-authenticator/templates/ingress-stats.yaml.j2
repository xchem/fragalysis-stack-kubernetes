---
kind: Ingress
apiVersion: networking.k8s.io/v1
metadata:
  name: taa-stats
  namespace: {{ taa_namespace }}
  annotations:
{% if taa_cert_issuer %}
    cert-manager.io/cluster-issuer: "letsencrypt-nginx-{{ taa_cert_issuer|lower }}"
{% endif %}
spec:
  ingressClassName: nginx
{% if taa_cert_issuer %}
  tls:
  - hosts:
    - {{ taa_stats_url }}
    secretName: taa-stats-tls
{% endif %}
  rules:
  - host: {{ taa_stats_url }}
    http:
      paths:
      - path: /
        pathType: Prefix
        backend:
          service:
            name: stats
            port:
              name: stats
